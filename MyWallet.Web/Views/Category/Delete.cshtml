@model MyWallet.Data.Domain.Category

<div class="row">
    <div class="col-md-4">
        @using (Html.BeginForm("Delete", "Category", FormMethod.Post))
        {
        <fieldset>
            <legend>Delete Category</legend>
            <hr />
            <div class="form-group">
                @Html.LabelFor(c => c.Name)
            </div>
            <div class="form-group">
                @Html.TextBoxFor(c => c.Name, new { @class = "form-control form-control-user", value = Model.Name })
            </div>
            <div class="form-group">
                @Html.LabelFor(c => c.UserId)
            </div>
            <div class="form-group">
                @Html.TextBoxFor(c => c.UserId, new { @class = "form-control form-control-user", value = Model.UserId })
            </div>
            <button type="submit" class="btn btn-danger btn-icon-split">
                <span class="icon text-white-50">
                    <i class="fas fa-trash"></i>
                </span>
                <span class="text">Delete</span>
            </button>
        </fieldset>
        }
    </div>
</div>


