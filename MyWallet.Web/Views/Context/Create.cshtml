@model MyWallet.Web.ViewModels.Context.ContextViewModel

@{
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<div class="card o-hidden border-0 shadow-lg my-5">
    <div class="card-body p-0">
        <!-- Nested Row within Card Body -->
        <div class="row">
            <div class="col-lg-5 d-none d-lg-block bg-register-image"></div>
            <div class="col-lg-7">
                <div class="p-5">
                    <div class="text-center">
                        <h1 class="h4 text-gray-900 mb-4">Create a Context</h1>
                    </div>
                    @using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "user" }))
                    {
                        @Html.HiddenFor(m => m.Id)
                        @Html.HiddenFor(m => m.UserId)
                        @Html.HiddenFor(m => m.IsMainContext)

                        <div class="form-group row">
                            <div class="col-sm-12 mb-6 mb-sm-0">
                                @Html.TextBoxFor(m => m.Name, new { @class = "form-control form-control-user", placeholder = "Enter a New Context Name" })
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-sm-12 mb-6 mb-sm-0">
                                @Html.DropDownListFor(
                                    m => m.CurrencyTypeId,
                                    Model.CurrencyTypeSelectList,
                                    new { @class = "form-control form-control-user custom-select custom-select-lg mb-3" })
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-sm-12 mb-6 mb-sm-0">
                                @Html.DropDownListFor(
                                    m => m.CountryId,
                                    Model.CountrySelectList,
                                    new { @class = "form-control form-control-user custom-select custom-select-lg mb-3" })
                            </div>
                        </div>

                        <button type="submit" class="btn btn-primary btn-user btn-block">Create</button>
                    }
                </div>
            </div>
        </div>
    </div>
</div>