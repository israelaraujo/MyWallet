@model MyWallet.Web.ViewModels.Context.ContextViewModel

<div class="row">
    <div class="col-md-4">
        @using (Html.BeginForm("Delete", "Context", FormMethod.Post, new { @class = "user" }))
        {
            @Html.HiddenFor(c => c.Id)
            <fieldset>
                <legend>Delete Context</legend>
                <hr />
                <div class="form-group">
                    @Html.LabelFor(c => c.Name)
                </div>
                <div class="form-group">
                    @Html.TextBoxFor(c => c.Name, new { @class = "form-control form-control-user", disabled = true })
                </div>
                <button type="submit" class="btn btn-danger btn-icon-split">
                    <span class="icon text-white-50">
                        <i class="fas fa-trash"></i>
                    </span>
                    <span class="text">Delete</span>
                </button>
            </fieldset>
        }
    </div>
</div>


