@model MyWallet.Web.ViewModels.User.UserViewModel

@using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "user", enctype = "multipart/form-data" }))
{
    <div class=" row">
        <div class="col-xl-3 col-md-6 mb-4">
            <h1>User name</h1>
            <div id="profilePhoto">
                <img src="#" alt="Alternate Text" />
            </div>
            <label for="profilePhoto">Upload a different photo...</label>
            <input type="file" name="profilePhoto" id="profilePhoto" /><br />

        </div>
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="form-group row">
                <div class="col-sm-6 mb-3 mb-sm-0">
                    @Html.Label("First Name")
                    @Html.TextBoxFor(p => p.Name)
                </div>

                <div class="col-sm-6">
                    @Html.Label("Last Name")
                    @Html.TextBoxFor(p => p.LastName)

                </div>
            </div>

            <div class="form-group row">
                <div class="col-sm-6 mb-3 mb-sm-0">
                    @Html.Label("Email")
                    @Html.TextBoxFor(p => p.Email)
                </div>

                <div class="col-sm-6">
                    @Html.Label("Password")
                    @Html.TextBoxFor(p => p.Password)

                </div>
            </div>

            <div class="form-group row">
                <div class="col-sm-6 mb-3 mb-sm-0">

                    <button type="submit" class="btn btn-success btn-icon-split">
                        <span class="icon text-white-50">
                            <i class="fas fa-check"></i>
                        </span>
                        <span class="text">Save</span>
                    </button>
                </div>
                <div class="col-sm-6">
                    <button type="submit" class="btn btn-secondary btn-icon-split">
                        <span class="icon text-white-50">
                            <i class="fas fa-undo-alt"></i>
                        </span>
                        <span class="text">Reset</span>
                    </button>
                </div>

            </div>
        </div>
    </div>
}
