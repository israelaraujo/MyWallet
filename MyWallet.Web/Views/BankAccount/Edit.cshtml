@model MyWallet.Web.ViewModels.BankAccount.BankAccountViewModel

<div class="row">
    <div class="col-md-4">
        @using (Html.BeginForm("Edit", "BankAccount", FormMethod.Post, new { @class = "user" }))
        {
            @Html.HiddenFor(m => m.Id)
            @Html.HiddenFor(m => m.ContextId)
            @Html.HiddenFor(m => m.CreationDate)
            @Html.HiddenFor(m => m.Id)

            <fieldset>
                <legend>Edit Bank Account</legend>
                <hr />
                <div class="form-group">
                    @Html.LabelFor(c => c.Name)
                </div>
                <div class="form-group">
                    @Html.TextBoxFor(c => c.Name, new { @class = "form-control form-control-user" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(c => c.OpeningBalance)
                </div>
                <div class="form-group">
                    @Html.TextBoxFor(c => c.OpeningBalance, new { @class = "form-control form-control-user" })
                </div>
                <button type="submit" class="btn btn-warning btn-icon-split">
                    <span class="icon text-white-50">
                        <i class="fas fa-pencil-alt"></i>
                    </span>
                    <span class="text">Edit</span>
                </button>
            </fieldset>
        }
    </div>
</div>

