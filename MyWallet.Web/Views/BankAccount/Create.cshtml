@model MyWallet.Web.ViewModels.BankAccount.BankAccountViewModel

@section breadcrumb {
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Index")">Bank Account</a></li>
            <li class="breadcrumb-item active" aria-current="page">Create</li>
        </ol>
    </nav>
}

<div class="row">
    <div class="col-md-4">
        @using (Html.BeginForm())
        {
            <fieldset>
                <legend>New Bank Account</legend>
                <hr />
                <div class="form-group">
                    @Html.LabelFor(c => c.Name)
                    @Html.TextBoxFor(c => c.Name, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(c => c.OpeningBalance)
                    @Html.TextBoxFor(c => c.OpeningBalance, new { @class = "form-control" })
                </div>
                <button type="submit" class="btn btn-success btn-icon-split">
                    <span class="icon text-white-50">
                        <i class="fas fa-check"></i>
                    </span>
                    <span class="text">Save</span>
                </button>
            </fieldset>
        }
    </div>
</div>
