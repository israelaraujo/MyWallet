@model MyWallet.Web.ViewModels.BankAccountViewModel


<div class="">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Index")">Bank Account</a></li>
            <li class="breadcrumb-item active" aria-current="page">Create</li>
        </ol>
    </nav>
</div>

<div class="row">
    <div class="col-md-4">
        @using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "user" }))
        {
            <fieldset>
                <legend>New Bank Account</legend>
                <hr />
                <div class="form-group row">
                    <div class="col-sm-12 mb-6 mb-sm-0">
                        @Html.TextBoxFor(m => m.Name, new { @class = "form-control form-control-user", placeholder = "Enter Bank Account Name" })
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-12 mb-6 mb-sm-0">
                        @Html.TextBoxFor(m => m.OpeningBalance, new { @class = "form-control form-control-user", placeholder = "Enter Bank Account Start Balance" })
                    </div>
                </div>
                <button type="submit" class="btn btn-success btn-icon-split">
                    <span class="icon text-white-50">
                        <i class="fas fa-check"></i>
                    </span>
                    <span class="text">Save</span>
                </button>
            </fieldset>
        }
    </div>
</div>
